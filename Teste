#include <stdio.h>

int main() {
    int a;
    printf("Digite um número que corresponde a um dos dias da semana: ");
    scanf("%d", &a);
    
    while (1) {   
        if (a == 0)
            break;
        else if (a >= 1 && a <= 7) {   
            switch (a) {
                case 1:
                    printf("Segunda-feira");
                    break;
                case 2:
                    printf("Terça-feira");
                    break;
                case 3:
                    printf("Quarta-feira");   
                    break;
                case 4:
                    printf("Quinta-feira");
                    break;
                case 5:
                    printf("Sexta-feira");
                    break;
                case 6:
                    printf("Sábado");   
                    break;   
                case 7:
                    printf("Domingo");   
                    break;     
            }   
        }  
        else {
            printf("Número inválido: ");
            break;
        }
    }
    
    return 0;
}
